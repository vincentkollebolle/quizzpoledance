<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="Quizz Pole Dance">
    <meta property="og:description" content="Tester vos connaissance en figure de Pole Dance !">
    <meta property="og:site_name" content="Quizz Pole Dance">
    <meta property="og:url" content="http://http://poledance.vincentbonnier.com/">
    <meta property="og:image" content="http://poledance.vincentbonnier.com/img/logo.jpg">
    <meta property="og:type" content="website">
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627" />
    <meta property="og:image:alt" content="Logo" />
    <link rel="icon" type="image/png" href="{{ asset("img/logo.jpg")}}" />
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/index.css')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- FontAwsome-->
    <script src="https://kit.fontawesome.com/8ea8f44ca5.js" crossorigin="anonymous"></script>

    {% block stylesheets %}

    {% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
  </head>
  <body>
    <div class="container mx-auto">
      <div class="flex align-center justify-between mt-5 p-3 text-white rounded-lg">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="alert alert-success alert-dismissible fade show w-50" role="alert">
              <i class="fas fa-check-circle"></i> Vous êtes connecté en tant que {{ app.user.username }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
         {% endif %}
      </div>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded-pill mb-3">
        <div class="container-fluid">
          <a class="navbar-brand" href="{{path('quizz')}}">Pole Dance Quizz </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link text-white" aria-current="page" href="{{path('quizz')}}"><i class="fas fa-question"></i> Quizz</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="{{path('quizz_history')}}"><i class="fas fa-trophy"></i> Classement</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="{{path('credits')}}"><i class="fab fa-angellist"></i> Remerciements</a>
              </li>
              <span class="btnNav">
                    {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-user-shield"></i> Admin
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item text-dark" href="{{path('answer_index')}}">Réponses</a></li>
                  <li><a class="dropdown-item text-dark" href="{{path('question_index')}}">Questions</a></li>
                </ul>
              </li>
                  {% endif %}
                  
                <a class="nav-link text-white" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
            </ul>
            {% else %}
              <li class="nav-item">
                <a class="nav-link text-white btnConnection" href="{{path('app_login')}}"><span><i class="fas fa-user"></i></span> Se connecter</a>
              </li>
              </span>
            {% endif %}
          </div>
        </div>
    </nav>

        <div class="w-full text-white rounded" style="background: rgba(0,0,0,0.7)">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <script src="{{ asset('assets/js/app.js') }}"></script>
    {% block javascripts %}

    {% endblock %}
  </body>
</html>
