            <div type="button" class="py-2 px-4 my-2 border border-gray-100 font-semibold rounded-lg shadow-md focus:outline-none flex justify-between
                {% if answer == playeranswer.pickedanswer %}bg-gray-100 text-black {% else %} text-white {% endif %}" tabindex="-1">
                {% if playeranswer.question.goodanswer.id == answer.id %}
                    <span class="mr-4">&#10004;</span>
                {% else %}
                    <span class="mr-4">&#10060;</span>
                {% endif %}
                <span class="flex-1">{{answer.content}}</span>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path("quizz_nextquestion", { id: playeranswer.quizz.id }) }}" class="md-btn" tabindex="-1">
        Question suivante
    </a>
