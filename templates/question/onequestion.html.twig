{% extends 'base.html.twig' %}

{% block title %}Exemple de question{% endblock %}

{% block body %}
    <img src="{{question.mediaurl}}" alt="photo de la figure" />
    <h2>{{question.content}} </h2>
   
   {# passer par symfony de ce form #}
    <form method="post" action="{{ path("validate_answer") }}">
        <input type="hidden" name="questionid" value="{{question.id}}" />
        
       
        {% for answer in question.answers %}
        <div class="form-check">
            <input class="form-check-input" type="radio" name="answerId" id="answer{{answer.id}}" value="{{answer.id}}">
            <label class="form-check-label" for="answer{{answer.id}}">
                 {{answer.content}}
            </label>
        </div>
        {% endfor %}
        <br />
        <input type="submit" value="suivante" class="btn btn-primary" /> 
    </form>
    
{% endblock %}
