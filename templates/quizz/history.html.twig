{% extends 'base.html.twig' %}

{% block title %}Quizz history {% if playername is defined %}of {{ playername }}{% endif %}{% endblock %}

{% block body %}
<div class="flex items-center flex-col w-full rounded-lg bg-darkTransparent p-5 text-white">
    <h1 class="my-2">Quizz history {% if playername is defined %}of {{ playername }}{% endif %}</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="flex items-center mb-7">
        <div class="md-input mb-5" style="width: 32em;">
            {{ form_label(form.playername, 'Playername')}}
            {{ form_widget(form.playername, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_widget(form.submit, {'attr': {'class': 'md-btn ml-4'}}) }}
    </div>
    {{ form_end(form) }}

    <table class="edit-table w-full mb-6">
        <thead>
            <tr>
            {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                <th>ID</th>
            {% endif %}
            {% endif %}
                <th>Rang</th>
                <th>Playername</th>
                <th>Niveau</th>
                <th>Score</th>
                <th>Date passage</th>
            </tr>
        </thead>
        <tbody>
        {% set rang = 1 %}
        {% for quizz in quizzs %}
            <tr>
            {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                <td>{{ quizz.id }}</td>
            {% endif %}
            {% endif %}
                <td>
                    {% if rang == 1 %}<i class="fas fa-trophy text-yellow-400"></i>{% else %}{{rang}}{% endif %}
                    {% set rang = rang + 1 %}
                </td>
                <td>{{ quizz.playername}} </td>
                <td>
                    {% if quizz.score < 500 %}
                        <span class="m-1 border rounded-full px-2">Novice</span>
                    {# Conditions de succès modulable #}
                    {% elseif quizz.score  < 2000 %}
                        <span class="m-1 border rounded-full px-2">Apprenti</span>
                    {% elseif quizz.score  < 4000 %}
                        <span class="m-1 border rounded-full px-2">Adepte</span>
                    {% elseif quizz.score  < 8000 %}
                        <span class="m-1 border rounded-full px-2">Expert</span>
                    {% else %}
                        <span class="m-1 border rounded-full px-2">Maître  <i class="fas fa-medal"></i></span>
                    {% endif %}
                </td>
                <td>{{ quizz.score }}</td>
                <td>{% if quizz.date is not null %} {{ quizz.date|date("d/m/Y") }} {% else %} --- {% endif %}</td>
            </tr>
        {% else %}
            <tr>
            {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                <td colspan="5">no records found</td>
            {% endif %}
            {% else %}
                <td colspan="4">no records found</td>
            {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
