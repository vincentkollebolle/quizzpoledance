{% extends 'base.html.twig' %}

{% block title %}Quizz index{% endblock %}

{% block body %}
    <h1>Quizz index</h1>
    <div class="text-white" style="background-color: white;">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quizz in quizzs %}
                <tr>
                    <td>{{ quizz.id }}</td>
                    <td>{{ quizz.name }}</td>
                    <td>
                        <a href="{{ path('admin_quizz_show', {'id': quizz.id}) }}">show</a>
                        <a href="{{ path('admin_quizz_edit', {'id': quizz.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('admin_quizz_new') }}">Create new</a>
{% endblock %}
